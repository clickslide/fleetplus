<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              style="@style/AppTheme">

    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imgScanColor"
            android:layout_gravity="center"
            android:layout_weight=".75"
            android:background="@android:color/black"/>

    <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5dip"
            android:layout_weight=".05">

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/tableRowRGB"
                android:layout_weight="1">

            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_span="1"
                    android:id="@+id/rgbTextTitle"
                    android:layout_column="1"
                    android:text="RGB: "/>

            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_span="1"
                    android:id="@+id/txtRGB"
                    android:layout_column="2"
                    />
        </TableRow>

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/tableRow"
                android:layout_weight="1">

            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_span="1"
                    android:id="@+id/txtLabTitle"
                    android:layout_column="1"
                    android:text="LAB: "
                    android:padding="2dip"
                    />

            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_span="1"
                    android:id="@+id/txtLab"
                    android:layout_column="2"/>
        </TableRow>
        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/tableRow2"
                android:layout_weight="1">

            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_span="1"
                    android:id="@+id/txtLabTitle"
                    android:layout_column="1"
                    android:text="HEX: "
                    android:padding="2dip"/>

            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_span="1"
                    android:id="@+id/txtHex"
                    android:layout_column="2"
                    />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".05"
        android:weightSum="2"
        android:layout_gravity="center"
        >

        <Button
            android:id="@+id/btnSingleScan"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:layout_weight="1"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="20dp"
            android:text="Scan Color" />

        <Button
            android:id="@+id/btnCalibrate"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="40dp"
            android:layout_weight="1"
            android:text="Calibrate" />

    </LinearLayout>
</LinearLayout><!-- From: file:/Users/aaronfranco/Downloads/variabletech-libnode-android-public-b6b8810d32a6/api%20example/APIDemo/src/main/res/layout/single_scan.xml -->